<!-- Home Slider
============================================= -->
<section id="slider" class="slider-parallax swiper_wrapper clearfix">
	<div class="slider-parallax-inner">
		<div class="swiper-container swiper-parent">
			<div class="swiper-wrapper">
				<div class="swiper-slide dark">
					<div class="container clearfix">
						<div class="slider-caption slider-caption-center">
							<h2 data-caption-animate="fadeInUp"><%= __("A DIFFERENT HEDGE") %></h2>
							<p data-caption-animate="fadeInUp" data-caption-delay="200"><%= __("A proprietary trading firm specialising in investments made with digital currencies.") %></p>
						</div>
					</div>
					<div class="video-wrap full-screen force-full-screen with-header">
						<video id="slide-video" poster="img/the-alley.jpg" preload="auto" loop autoplay muted>
							<source src='img/the-alley.webm' type='video/webm' /><%= __("Your browser does not support the video tag. I suggest you upgrade your browser.") %>
							<source src='img/the-alley.mp4' type='video/mp4' /><%= __("Your browser does not support the video tag. I suggest you upgrade your browser.") %>
						</video>
						<div class="video-overlay" style="background-color: rgba(0,0,0,0.55);"></div>
					</div>
				</div>
				<div class="swiper-slide dark">
					<div class="container clearfix">
						<div class="slider-caption slider-caption-center">
							<h2 data-caption-animate="fadeInUp"><%= __("IDEAS WORTHWHILE") %></h2>
							<p data-caption-animate="fadeInUp" data-caption-delay="200"><%= __("Always looking for an edge, we use and develop the latest technology") %>.</p>
						</div>
					</div>
					<div class="video-wrap full-screen force-full-screen with-header">
						<video id="slide-video" poster="img/dancing-bulbs.jpg" preload="auto" loop autoplay muted>
							<source src='img/dancing-bulbs.webm' type='video/webm' /><%= __("Your browser does not support the video tag. I suggest you upgrade your browser.") %>
							<source src='img/dancing-bulbs.mp4' type='video/mp4' /><%= __("Your browser does not support the video tag. I suggest you upgrade your browser.") %>
						</video>
						<div class="video-overlay" style="background-color: rgba(0,0,0,0.55);"></div>
					</div>
				</div>
				<div class="swiper-slide dark">
					<div class="container clearfix">
						<div class="slider-caption slider-caption-center">
							<h2 data-caption-animate="fadeInUp"><%= __('16 YEARS OF TRADES') %></h2>
							<p data-caption-animate="fadeInUp" data-caption-delay="200"><%= __('Both a CMT and CFA, the head fund manager has 16 years of qualified trading experience with an excellent track record.') %></p>
						</div>
					</div>
					<div class="video-wrap full-screen force-full-screen with-header">
						<video id="slide-video" poster="img/push-the-buttons.jpg" preload="auto" loop autoplay muted>
							<source src='img/push-the-buttons.webm' type='video/webm' /><%= __("Your browser does not support the video tag. I suggest you upgrade your browser.") %>
							<source src='img/push-the-buttons.mp4' type='video/mp4' /><%= __("Your browser does not support the video tag. I suggest you upgrade your browser.") %>
						</video>
						<div class="video-overlay" style="background-color: rgba(0,0,0,0.55);"></div>
					</div>
				</div>
			</div>
			<div id="slider-arrow-left"><i class="icon-angle-left"></i></div>
			<div id="slider-arrow-right"><i class="icon-angle-right"></i></div>
		</div>
		<a href="#" data-scrollto="#content" data-offset="100" class="dark one-page-arrow"><i class="icon-angle-down infinite animated fadeInDown"></i></a>
	</div>
</section>

<!-- Main Content
============================================= -->
<section id="content">
	<div class="content-wrap">
		<div class="container clearfix">
			<div class="col_one_third text-center">
				<div class="heading-block fancy-title nobottomborder title-bottom-border">
					<h4><%= __('Our') %> <span><%= __('Vision') %></span>.</h4>
				</div>
				<p><%= __('To tie the link between new and old systems and provide an opportunity for all to be involved globally around the clock.') %></p>
				<a href="/about" class="button button-border button-rounded button-fill button-teal"><span><%= __('Learn More') %></span></a>
			</div>
			<div class="col_one_third text-center">
				<div class="heading-block fancy-title nobottomborder title-bottom-border">
					<h4><%= __('Our') %> <span><%= __('Mission') %></span>.</h4>
				</div>
				<p><%= __('To refine working with the right people and developments to ensure we achieve a high standard of success.') %></p>
				<a href="#" class="button button-border button-rounded button-fill button-teal" data-toggle="modal" data-target=".bs-example-modal-sm"><span><%= __('Apply Now') %></span></a>
			</div>
			<div class="col_one_third col_last text-center">
				<div class="heading-block fancy-title nobottomborder title-bottom-border">
					<h4><%= __('Our') %> <span><%= __('Technology') %></span>.</h4>
				</div>
				<p><%= __('To build and use the latest technology to ensure we can accurately spot and take advantage of developing markets and systems.') %></p>
				<a href="/tech" class="button button-border button-rounded button-fill button-teal"><span><%= __('Learn More') %></span></a>
			</div>
		</div>
	</div>
</section>

<!-- Modal
============================================= -->
<div class="modal fade bs-example-modal-sm" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel" aria-hidden="true">
	<div class="modal-dialog modal-sm">
		<div class="modal-body">
			<div class="modal-content">
				<div class="modal-header">
					<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
					<h4 class="modal-title" id="myModalLabel"><%= __('Thanks for your interest!') %></h4>
				</div>
				<div class="modal-body">
					<p><%= __('For now as we are preparing our operations, we have not made job openings yet but do watch this page.') %></p>
					<p><%= __('However, if you would like to send us your CV regardless, please do drop us a line on our Contact page.') %></p>
				</div>
			</div>
		</div>
	</div>
</div>